<div class="container artists">
  <div class="row">
    <div class="col-sm-12">
      <header>
        <h1>Artistas</h1>
      </header>

      <div class="artists-list">
      <% @artists.each do |artist| %>
        <div class="artist">
          <div class="row">
            <div class="card" style="width: 18rem;">
              <img src="<%= artist.image_url %>" class="card-img-top" alt="<%= artist.name %>">
              <div class="card-body">
                <h5 class="card-title"><%= artist.name %></h5>
                <%= link_to "<span class='glyphicon glyphicon-pencil'><span>".html_safe, artist_path(artist), class: "show-artist-btn" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
